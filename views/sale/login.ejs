<%- include('../includes/head.ejs', { title: 'Login' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <main id="signup">
    <h1>로그인</h1>
    <% if(inputData.hasError) {%>
      <p id="input-error"><%=inputData.message%></p>
      <% } %>
    <form action="/login" method="POST">
      <div class="form-control">
        <label for="id">ID</label>
        <input type="id" id="id" value="<%=inputData.id%>" name="id" required>
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input type="password" id="password" value="<%=inputData.password%>" name="password" required>
      </div>
      <button class="btn">로그인</button>
    </form>
    <div id="auth-alternative">
      <a class="btn btn-alt" href="/signup">댕냥냠냠 회원이 아니신가요??</a>
    </div>
  </main>
</body>

</html>